<resources>

<style name="MyMaterialTheme" parent="MyMaterialTheme.Base">

</style>

<style name="MyMaterialTheme.Base" parent="Theme.AppCompat.Light.DarkActionBar">

    <item name="windowNoTitle">true</item>
    <item name="windowActionBar">false</item>
    <item name="colorPrimary">@color/colorPrimary</item>
    <item name="colorPrimaryDark">@color/colorPrimary</item>
    <item name="colorAccent">@color/white</item>
    <item name="colorControlActivated">@color/colorPrimary</item>
    <item name="android:textColorHint">@color/iron</item>
    <item name="colorControlNormal">@color/iron</item>

</style>


<style name="AppTheme.Dark" parent="Theme.AppCompat.Light.NoActionBar">

    <item name="colorPrimary">@color/colorPrimary</item>
    <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
    <item name="colorAccent">@color/white</item>
    <item name="android:textColor">@color/black</item>

    <item name="colorControlNormal">@color/iron</item>
    <item name="colorControlActivated">@color/colorPrimary</item>
    <item name="colorControlHighlight">@color/colorPrimary</item>
    <item name="android:textColorHint">@color/iron</item>

    <item name="colorButtonNormal">@color/colorPrimary</item>

</style>


<style name="AppTheme.Dark.Dialog" parent="Theme.AppCompat.Dialog">
    <item name="colorAccent">@color/white</item>
    <item name="android:textColorPrimary">@color/iron</item>
    <item name="android:background">@color/primary</item>
</style>


<style name="AppTheme.Light.DatePicker" parent="Theme.AppCompat.Light.Dialog">
    <item name="colorControlHighlight">@color/primary</item>
    <!--highliht when toggle-->
    <item name="colorControlActivated">@color/primary_dark</item>
    <!--when activated or clicked-->
    <item name="colorAccent">@color/primary</item>
    <!--main important color is this(in headings and buttons)-->

</style>

<style name="Spinner" parent="Theme.AppCompat.Dialog">
    <item name="android:paddingStart">0dp</item>
    <item name="android:paddingEnd">0dp</item>
    <item name="android:textColor">@color/white</item>
    <item name="android:popupBackground">@color/primary_dark</item>
    <item name="android:textSize">14sp</item>
</style>


</resources>