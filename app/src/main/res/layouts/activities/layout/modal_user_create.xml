<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/linear_popup"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10sp"
    android:background="@drawable/custom_modal"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Create Users"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"

            android:padding="10dp">

            <!--AutoComplete Text Halni Ysma-->

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Customers"
                android:textColor="@color/black"
                android:textColorHint="@color/black"
                android:paddingLeft="11dp"
                android:textSize="18sp"
                />

            <Spinner
                android:id="@+id/user_modal_customer"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:background="@drawable/popup_spinner"
                android:padding="10dp"
                android:paddingBottom="8dp"
                android:spinnerMode="dialog"
                android:textSize="14sp"

                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Special Program"
                android:textColor="@color/black"
                android:textColorHint="@color/black"
                android:paddingLeft="11dp"
                android:textSize="18sp"
                />

            <Spinner
                android:id="@+id/user_modal_special_program"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:background="@drawable/popup_spinner"
                android:padding="10dp"
                android:paddingBottom="8dp"
                android:spinnerMode="dialog"
                android:textSize="14sp"

                />



            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="User Activated"
                android:textColor="@color/black"
                android:textColorHint="@color/black"
                android:paddingLeft="11dp"
                android:textSize="18sp"
                />

            <Spinner
                android:id="@+id/user_modal_user_activated"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:background="@drawable/popup_spinner"
                android:padding="10dp"
                android:paddingBottom="8dp"
                android:spinnerMode="dialog"
                android:textSize="14sp"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:padding="8dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="First Name(*)"
                    android:paddingBottom="8dp"
                    android:paddingTop="5dp"
                    android:textColorHint="@color/black"
                    android:textSize="18sp"
                    />


                <android.support.design.widget.TextInputEditText

                    android:id="@+id/user_modal_first_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:focusableInTouchMode="true"
                    android:inputType="text"
                    android:paddingBottom="8dp"
                    android:paddingLeft="11dp"
                    android:textSize="16sp" />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:padding="8dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="Last Name(*)"
                    android:paddingBottom="8dp"
                    android:paddingTop="5dp"
                    android:textColorHint="@color/black"
                    android:textSize="18sp" />


                <android.support.design.widget.TextInputEditText

                    android:id="@+id/user_modal_last_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:focusableInTouchMode="true"
                    android:inputType="text"
                    android:paddingBottom="8dp"
                    android:paddingLeft="11dp"
                    android:textSize="16sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:padding="8dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="Email(*)"
                    android:paddingBottom="8dp"
                    android:paddingTop="5dp"
                    android:textColorHint="@color/black"
                    android:textSize="18sp"
                    />


                <android.support.design.widget.TextInputEditText

                    android:id="@+id/user_modal_email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:focusableInTouchMode="true"
                    android:inputType="textEmailAddress"
                    android:paddingBottom="8dp"
                    android:paddingLeft="11dp"
                    android:textSize="16sp" />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:padding="8dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="Password(*)"
                    android:paddingBottom="8dp"
                    android:paddingTop="5dp"
                    android:textColorHint="@color/black"
                    android:textSize="18sp"
                    />


                <android.support.design.widget.TextInputEditText

                    android:id="@+id/user_modal_password"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:focusableInTouchMode="true"
                    android:inputType="text"
                    android:paddingBottom="8dp"
                    android:paddingLeft="11dp"
                    android:textSize="16sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:padding="8dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="Confirm Password(*)"
                    android:paddingBottom="8dp"
                    android:textColorHint="@color/black"
                    android:paddingTop="5dp"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    />

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/user_modal_confirm_password"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:focusableInTouchMode="true"
                    android:inputType="text"
                    android:paddingBottom="8dp"
                    android:paddingLeft="11dp"
                    android:textSize="16sp" />

            </LinearLayout>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Groups(*)"
                android:textColor="@color/black"
                android:textColorHint="@color/black"
                android:paddingLeft="11dp"
                android:textSize="18sp"
                />

            <Spinner
                android:id="@+id/user_modal_spinner_groups"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:background="@drawable/popup_spinner"
                android:padding="10dp"
                android:paddingBottom="8dp"
                android:spinnerMode="dialog"
                android:textSize="14sp"

                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal">


            <Button
                android:id="@+id/user_modal_submit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:gravity="center"
                android:padding="10dp"
                android:text="SUBMIT"
                android:textColor="@color/primary_dark"
                android:textSize="16sp"
                android:textStyle="bold" />


            <Button
                android:id="@+id/user_modal_cancel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="40dp"
                android:layout_weight="1"
                android:gravity="center"
                android:padding="10dp"
                android:text="CANCEL"
                android:textColor="@color/primary_dark"
                android:textSize="16sp"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>

</ScrollView>